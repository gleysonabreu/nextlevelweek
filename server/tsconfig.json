{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6"
      ],
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./dist",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "esModuleInterop": true,
      "rootDir": ".",
      "strict": true,
      "strictPropertyInitialization": false,
      "allowJs": true,
      "forceConsistentCasingInFileNames": true,
      "removeComments": true,
   }
}